<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/performance_settings_title" >

	<ListPreference
		android:key="pref_io_sched"
		android:dialogTitle="@string/io_sched_title"
		android:title="@string/io_sched_title" />

	<ListPreference
		android:key="pref_cpu_gov"
		android:dialogTitle="@string/cpu_governors_title"
		android:title="@string/cpu_governors_title" />

	<ListPreference
		android:key="pref_cpu_freq_min"
		android:dialogTitle="@string/cpu_min_freq_title"
		android:title="@string/cpu_min_freq_title" />

	<ListPreference
		android:key="pref_cpu_freq_max"
		android:dialogTitle="@string/cpu_max_freq_title"
		android:title="@string/cpu_max_freq_title" />

	<ListPreference
		android:key="pref_gpu_freq"
		android:dialogTitle="@string/gpu_freq_title"
		android:title="@string/gpu_freq_title" />

	<PreferenceCategory android:key="processor_category"
		android:title="@string/performance_set_on_boot_title">
		<CheckBoxPreference
			android:key="pref_performance_seton_boot"
			android:title="@string/performance_set_on_boot"
			android:summary="@string/performance_set_on_boot_summary"/>
	</PreferenceCategory>

	<PreferenceCategory android:key="processor_category"
		android:title="@string/performance_set_on_boot_title">
	</PreferenceCategory>

	<PreferenceCategory android:key="disclaimer_category"
		android:gravity="center"
		android:title="@string/performance_disclaimer">
	</PreferenceCategory>

</PreferenceScreen>
